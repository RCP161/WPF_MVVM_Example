<catel:UserControl x:Class="Company.UI.Views.TreeView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:Company.UI.Views"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:vm="clr-namespace:Company.Core.ViewModels;assembly=Company.Core.ViewModels"
                   d:DesignHeight="450"
                   d:DesignWidth="800"
                   mc:Ignorable="d">
    <TreeView Grid.Column="0"
              Margin="0,0,10,0"
              ItemsSource="{Binding Customers}">
        <TreeView.ItemTemplate>
            <HierarchicalDataTemplate DataType="{x:Type vm:TreeViewItemVm}" ItemsSource="{Binding ChildCollection}">
                <TextBlock Text="{Binding DisplayText}" />
            </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
    </TreeView>
</catel:UserControl>
